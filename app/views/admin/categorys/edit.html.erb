<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 mt-5">
      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0"><b>カテゴリ編集</b></h5>
        </div>
        <div class="card-body">
          <%= form_with model: @category, url: admin_category_path(@category.id), method: :patch do |f| %>
            <div class="form-group">
              <%= f.label :category_name, "カテゴリ名",class: "font-weight-bold" %>
              <%= f.text_field :category_name, class: "form-control" %>
            </div>
            <%= f.submit '変更を保存', class: 'btn btn-success btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>