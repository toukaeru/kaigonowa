<div class="container">
  <div class="row">
    <div class="col-lg-2.5 mt-5 ml-5 mb-lg-5">
      <h5 class="h-25 bg-light">カテゴリ一覧・追加</h5>
    </div>
      <div class="col-lg-2.5 mt-5 ml-5 mb-lg-5">
      <div>
        <%= form_with model: @category, url: '/admin/categorys', method: :post, class: "form-inline" do |f| %>
          <div class="form-group">
            <%= f.label :category_name, "カテゴリ名" %>
            <%= f.text_field :category_name, class: "form-control ml-2", placeholder: "カテゴリ名" %>
          </div>
          <%= f.submit '新規登録', class: 'btn btn-success ml-3' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-5 mt-4">
      <table class='table table-hover table-inverse'>
        <thead class="bg-light">
          <tr>
            <th>カテゴリ名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categorys.each do |category| %>
            <tr>
              <td><%= category.category_name %></td>
              <td><%= link_to "編集する", edit_admin_category_path(category.id), class: 'btn btn-success' %></td>
              <td><%= link_to "削除する", admin_category_path(category.id), method: :delete,  class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @categorys %>
    </div>
  </div>
</div>