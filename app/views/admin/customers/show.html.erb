<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1">
      <h3 class="mb-4">会員詳細</h3>
      <%= flash[:notice] %>
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><%= @customer.name %>さんの会員情報詳細</h4>
            <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
          </div>
          <ul class="list-group list-group-flush mt-4">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              会員ID
              <span class="badge badge-secondary badge-pill"><%= @customer.id %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              氏名
              <span><%= @customer.name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              メールアドレス
              <span><%= @customer.email%></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              会員ステータス
              <span><%= @customer.is_deleted ? '退会' : '有効' %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>