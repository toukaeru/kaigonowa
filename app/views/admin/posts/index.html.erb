<div class="container">
  <h1>投稿一覧</h1>
  <hr>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6">
        <div class="card mb-4">
          <div class="card-body">
             <h2 class="card-title"><%= link_to post.title, admin_post_path(post) %></h2>
            <p class="card-text"><%= post.content %></p>
            <p class="card-text">投稿者: <%= link_to post.customer.name, admin_customer_path(post.customer) %></p>
          </div>
          <div class="card-footer">
            <small class="text-muted"><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></small>
          </div>
          <%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '削除してもよろしいですか?' }, class: 'btn btn-danger btn-sm' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @posts %>
</div>