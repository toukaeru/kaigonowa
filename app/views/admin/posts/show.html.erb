<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @post.title %></h1>
      <p class="card-text"><%= @post.content %></p>
      <p class="card-text">投稿者: <%= @post.customer.name %></p>
      <p class="card-text">投稿日時: <%= @post.created_at %></p>
    </div>
  </div>

  <div class="mt-4">
    <h2>コメント一覧</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">投稿者</th>
          <th scope="col">コメント</th>
          <% if current_customer&.admin? %>
            <th scope="col"></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @post.comments.each do |comment| %>
          <tr>
            <td><%= comment.customer.name %></td>
            <td><%= comment.content %></td>
            <% if current_user&.admin? %>
              <td>
                <%= link_to '削除', post_comment_path(@post, comment), method: :delete, data: { confirm: '削除してもよろしいですか?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

