<div class="row">
  <div class="col-md-6 offset-md-3">
    <h2>ログイン</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", size: 25 %>
      </div>
      <div class="form-group">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", size: 25 %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>
  </div>
</div>