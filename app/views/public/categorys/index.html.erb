<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>カテゴリ一覧</h1>
      <br>
      <div class="row">
        <% @categorys.each do |category| %>
          <div class="col-md-3">
            ・<%= link_to category.category_name, categorys_path(category_id: category.id) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">投稿一覧</h1>
      <br>
      <div class="row">
        <% @posts.each_with_index do |post, index| %>
          <div class="col-md-4">
            <h2><%= link_to post.title, post %></h2>
            <p><%= post.content %></p>
          </div>
          <% if (index + 1) % 3 == 0 %>
            </div>
            <div class="row">
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>