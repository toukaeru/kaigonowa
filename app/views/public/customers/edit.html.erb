<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>ユーザー情報</h1>
      <% if @customer.errors.any? %>
         <%= @customer.errors.count %>  件のエラーが発生しました。
         <ul>
          <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
         </ul>
      <% end %>
      <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
       <div class="form-group">
         <h4>名前</h4>
         <%= f.text_field :name, class: "form-control" %>
       </div>

       <div class="form-group">
         <h4>プロフィール画像</h4>
         <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
       </div>

       <div class="form-group">
        <h4>紹介文</h4>
         <%= f.text_area :introduction, class: "form-control" %>
       </div>

       <%= f.submit '変更を保存', class: "btn btn-secondary" %>
       <%= link_to " 退会する", customer_unsubscribe_path(@customer), class: "glyphicon glyphicon-tint btn btn-danger col-sm-3", style: "margin: 10px;" %>
      <% end %>
    </div>
  </div>
</div>
