<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class ="col-md-3">
      <h2>ユーザー情報</h2>
      <%= image_tag @customer.get_profile_image(100, 100) %>
      <table class = "table">
        <tbody>
         <tr>
          <th>名前</th>
          <th><%= @customer.name %></th>
         </tr>
         <tr>
           <th>紹介</th>
           <th><%= @customer.introduction %></th>
         </tr>
        </tbody>
      </table>
      <div class = "row">
       <%= link_to edit_customer_path(@customer.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class ="fas fa-user-cog"></i>
       <% end %>
      </div>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>自分の投稿</h2>
      <table class = "table table-hover table-inverse">
        <thend>
          <tr>
            <th></th>
            <th>名前</th>
            <th>タイトル</th>
            <th colspan = "3"></th>
          </tr>
        </thend>

        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_profile_image(100,100) %></td>
            <td><%= post.name %></td>
            <td><%= link_to "Show", post_path(@customer.id) %> </td>
           </tr>
           <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>