<div class = "container px-5 px-sm-0">
  <div class = "row">
    <%= render "info", customer: @customer %>
    <div class = "col-md-8 offset-md-1">
      <h2>ユーザー</h2>
      <table class = "table table-hover table-inverse">
        <thend>
          <tr>
            <th></th>
            <th>名前</th>
            <th colspan = "3"></th>
          </tr>
        </thend>

        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= image_tag customer.get_profile_image(100,100) %></td>
            <td><%= customer.name %></td>
            <td><%= link_to "詳細", customer_path(customer.id) %> </td>
           </tr>
           <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>