<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">いいね投稿一覧</h1>
      <br>
      <div class="row">
        <% @like_posts.each do |post|%>
          <div class="col-md-4">
            <h2><%= link_to post.title, post %></h2>
            <p><%= post.content %></p>
            <p><%= "#{post.likes.count} いいね" %></p>
            <p><%= "#{post.comments.count} コメント"%></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>