<div class = "container px-5 px-sm-0">
  <div class = "row">
    <%= render "info", coustomer: @customer %>
    <div class = "col-md-8 offset-md-1">
      <h1>投稿</h1>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>内容</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <th><%= link_to post.title, post_path(post.id) %> </th>
            <th><%= post.content %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>