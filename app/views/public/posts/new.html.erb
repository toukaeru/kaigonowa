<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>新規投稿</h1>
      <% if @post.errors.any? %>
         <%= @post.errors.count %> error prohibited this obj from being saved:
         <ul>
          <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
         </ul>
      <% end %>
      <br>
      <%= form_with model: @post do |f| %>
       <div class="form-group">
         <h4>タイトル</h4>
         <%= f.text_field :title, class: "form-control" %>
       </div>
       <div class="form-group">
        <h4>カテゴリ</h4>
        <%= f.collection_select :category_id, Category.all, :id,:category_name,{prompt: "--選択してください--"} ,class: "form-control" %>
       </div>
       <div class="form-group">
        <h4>内容</h4>
         <%= f.text_area :content, class: "form-control" , rows: 10, cols: 50 %>
       </div>

       <%= f.submit '投稿', class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>





