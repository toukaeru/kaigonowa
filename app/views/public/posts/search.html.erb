<div class="container">
  <h1>検索結果</h1>
  <% if @posts.present? %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.customer.name %></td>
              <td><%= link_to post.title, post_path(post) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p>該当する投稿がありませんでした。</p>
  <% end %>
</div>