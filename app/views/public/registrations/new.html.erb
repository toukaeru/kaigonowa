<div class="row">
  <div class="col-md-6 offset-md-3">
    <h2>新規登録</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
　　<% if @customer.errors.any? %>
         <%= @customer.errors.count %> 件のエラーが発生しました。
         <ul>
          <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
         </ul>
      <% end %>
      <div class="form-group">
        <%= f.label :名前 %><br>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", size: 25 %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", size: 25 %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", size: 25 %>
      </div>

      <div class="form-group">
        <%= f.label :パスワードの確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", size: 25 %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>