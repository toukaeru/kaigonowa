<h1>フォロワーユーザー</h1>
 <% if @customers.count <= 0 %>
  <P>ユーザーはいません。</p>
  <% else %>
  <table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image(100,100) %></td>
        <td><%= customer.name %></td>
        <td>フォロー数: <%= customer.followings.count %></td>
        <td>フォロワー数: <%= customer.followers.count %></td>
        <td><%= link_to '詳細', customer %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
